{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build", "codegen", "api#codegen"],
      "outputs": ["dist/**", "dist.cjs/**"],
      "env": ["ELECTRON"]
    },
    "build:electron": {
      "dependsOn": ["build"],
      "outputs": ["out/**"]
    },
    "lint": {},
    "//#lint:scripts": {},
    "lint:fix": {},
    "typecheck": {
      "dependsOn": ["^build"]
    },
    "test": {
      "dependsOn": ["^build"]
    },
    "test:integration": {
      "dependsOn": ["^build"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["codegen", "^build"],
      "passThroughEnv": [
        "UI_URL",
        "ENABLED_NETWORKS",
        "ENABLE_SNAPSHOT_X",
        "ENABLE_GOVERNOR_BRAVO",
        "ENABLE_OPENZEPPELIN",
        "VITE_MANA_URL"
      ]
    },
    "dev:electron": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["codegen", "^build"]
    },
    "codegen": {
      "outputs": [".checkpoint/**", "src/networks/common/graphqlApi/gql/**"],
      "inputs": [
        "**/*.gql",
        "codegen.ts",
        "src/networks/common/graphqlApi/queries.ts"
      ]
    }
  }
}
