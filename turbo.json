{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build", "codegen"]
    },
    "lint": {},
    "typecheck": {
      "dependsOn": ["^build"]
    },
    "test": {
      "dependsOn": ["^build"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["codegen"]
    },
    "codegen": {
      "outputs": [".checkpoint/**", "generated/**"],
      "inputs": ["**/*.graphql", "**/*.gql"]
    }
  }
}
