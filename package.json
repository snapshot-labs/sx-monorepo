{
  "name": "sx-monorepo",
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git@github.com:snapshot-labs/sx-monorepo.git"
  },
  "scripts": {
    "dev": "turbo run dev --filter=!mana --filter=!api --filter=!api-subgraph",
    "dev:interactive": "ts-node ./scripts/dev-interactive.ts",
    "build": "turbo run build",
    "test": "turbo run test",
    "test:integration": "turbo run test:integration",
    "lint": "turbo run lint lint:scripts",
    "lint:scripts": "eslint scripts/ --ext .ts",
    "typecheck": "turbo run typecheck",
    "release": "yarn build && changeset publish"
  },
  "eslintConfig": {
    "extends": "@snapshot-labs"
  },
  "prettier": "@snapshot-labs/prettier-config",
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@inquirer/prompts": "^7.4.0",
    "@snapshot-labs/eslint-config": "^0.1.0-beta.21",
    "@snapshot-labs/prettier-config": "^0.1.0-beta.19",
    "eslint": "^8.57.0",
    "prettier": "^3.1.0",
    "ts-node": "^10.9.2",
    "turbo": "^2.4.0",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=22.x"
  },
  "packageManager": "yarn@1.22.19",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "nohoist": [
      "**/@graphprotocol/graph-ts",
      "**/assemblyscript"
    ]
  }
}
